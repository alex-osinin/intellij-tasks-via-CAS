<idea-plugin>
    <id>com.aosinin.plugin.tasks.cas</id>
    <name>Tasks via CAS</name>
    <version>1.0.0</version>
    <category>Other Tools</category>
    <vendor email="osinin.dev@gmail.com" url="https://github.com/alex-osinin">Alex Osinin</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag -->
    <description><![CDATA[
        Addition to the built-in Task Management plugin (for Generic server) for authorization using old versions of CAS.
    ]]></description>

    <!-- Product and plugin compatibility requirements-->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.tasks</depends>

    <!-- Extension points defined by the plugin-->
    <extensions defaultExtensionNs="com.intellij.tasks">
        <repositoryType implementation="com.aosinin.intellij.tasks.cas.CASGenericRepositoryType"/>
    </extensions>
</idea-plugin>